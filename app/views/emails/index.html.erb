<div class="container">


<%= link_to "Recevoir un email", emails_path, method: :post, class: "btn btn-primary btn-sm", remote: true %>


  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Email list</th>
        <th scope="col">Selected email</th>
      </tr>
    </thead>

    <tbody id="email-list">
      <% @emails.each do |email|  %>
      
     <tr>
     <td id="<%=email.id%>"> Object : <%=email.object %>,</td>
    <tr>
      <% end %>

    </tbody>
  </table>
</div> 

